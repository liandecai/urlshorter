<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:component-scan base-package="com.qunar.exam.service" annotation-config="true"/>
    
    <!-- 关于考试参数的一些公共配置 -->
    <bean class="com.qunar.exam.common.ExamConfig">
    	<property name="EXAM_URL" value="${exam.url}"></property>
    	<property name="SCORE_URL" value="${exam.score.url}"></property>
    	<property name="MAIL_SUFFIX" value="${exam.mail.suffix}"></property>
    	<property name="QUESTION_EXTRA" value="${exam.question.extra}"></property>
    	<property name="PAPER_START_TIME_LIMIT" value="${exam.paper.start.time.limit}"></property>
    	<property name="DEPARTMENT_PREFIX" value="${exam.department.prefix}"></property>
    	<property name="ANSWER_LENGHT" value="${exam.answer.length}"></property>
    	<property name="ANSWER_TOO_LONG" value="${exam.answer.too.long}"></property>
    </bean>
</beans>
